generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // Path is relative to the `prisma/` folder, so keep it inside that folder
  url      = "file:./dev.db"
}

model User {
  id       String     @id @default(uuid())
  name     String
  phone    String
  jabatan  String
  username String     @unique
  password String
  role     String // superadmin | staff | user
  keuangan Keuangan[]
  inventaris Inventaris[]
}

model Keuangan {
  id          String   @id @default(uuid())
  date        DateTime
  type        String // income | expense
  amount      Int
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model Inventaris {
  id          String   @id @default(uuid())
  name        String
  quantity    Int
  condition   String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model MasterDataPelanggan {
  id          String   @id @default(uuid())
  name        String
  address     String
  phone       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}